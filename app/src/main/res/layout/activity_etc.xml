<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/comm_title"/>
    <RadioGroup
        android:id="@+id/rg_login_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/login_btn_white_background"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tag1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/sl_act_login_text"
            android:background="@drawable/sl_act_login_bg_left"
            android:textSize="13sp"
            android:text="立即充值"
            android:gravity="center"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_tag2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/sl_act_login_text"
            android:background="@drawable/sl_act_login_bg_right"
            android:textSize="13sp"
            android:text="账户查询"
            android:gravity="center"/>

    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="35dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="车牌号"

            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_carvalue"
            android:paddingLeft="12dp"
            android:layout_marginLeft="24dp"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:background="@drawable/etc_shape_contact"
            android:drawableRight="@drawable/icon_pull_down"
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingTop="7dp"
            />

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="ETC卡号"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/tv_etc"
            android:paddingLeft="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_contact"
            android:paddingTop="7dp"
            android:textColor="#333333"
            android:textSize="16sp"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"/>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_recharge"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginRight="7dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_pay"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="立即充值"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/shape_coast"
            />
        <LinearLayout
            android:id="@+id/ll_etcask"
            android:layout_gravity="right"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_etcask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETC充值流程"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:textColor="#12b6f6"
                />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>"
                android:textSize="16sp"
                android:textColor="#12b6f6"
                />

        </LinearLayout>

    </LinearLayout>
<RelativeLayout

    android:id="@+id/rl_query"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout

     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <RadioGroup
         android:id="@+id/rg_etc_tab"
         android:layout_width="180dp"
         android:layout_height="30dp"
         android:background="@drawable/login_btn_white_background"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <RadioButton
             android:id="@+id/etc_tag1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:button="@null"
             android:textColor="@drawable/sl_act_login_text"
             android:background="@drawable/sl_act_login_bg_left"
             android:textSize="13sp"
             android:text="充值记录"
             android:gravity="center"
             android:checked="true"/>

         <RadioButton
             android:id="@+id/etc_tag2"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:button="@null"
             android:textColor="@drawable/sl_act_etc_text"
             android:background="@drawable/sl_act_etc_bg_right"
             android:textSize="13sp"
             android:text="消费记录"
             android:gravity="center"/>

     </RadioGroup>


     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <LinearLayout
             android:visibility="gone"
             android:id="@+id/ll_record1"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:layout_marginTop="15dp"
             android:background="@drawable/etc_query_bg"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:gravity="center"
             android:orientation="horizontal">

             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="充值类型"
                 android:layout_marginLeft="18dp"
                 android:layout_gravity="center"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="充值金额"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="充值时间"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:layout_marginLeft="3dp"
                 android:textColor="#333333"
                 android:text="充值状态"
                 />

         </LinearLayout>
         <LinearLayout

             android:id="@+id/ll_record2"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:layout_marginTop="15dp"
             android:background="@drawable/etc_query_bg"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:gravity="center"
             android:visibility="gone"
             android:orientation="horizontal">

             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="进出站信息"
                 android:layout_marginLeft="12dp"
                 android:layout_gravity="center"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="消费金额"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:textColor="#333333"
                 android:text="消费时间"
                 />
             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:layout_marginLeft="3dp"
                 android:textColor="#333333"
                 android:text="卡内余额"
                 />

         </LinearLayout>

     </RelativeLayout>

     <!--<ListView-->
         <!--android:layout_marginLeft="12dp"-->
         <!--android:layout_marginRight="12dp"-->
         <!--android:id="@+id/ListView01"-->
         <!--android:divider="#333333"-->
         <!--android:dividerHeight="1dp"-->
         <!--android:layout_width="match_parent"-->
         <!--android:layout_height="wrap_content">-->


     <!--</ListView>-->


     <com.handmark.pulltorefresh.library.PullToRefreshScrollView
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:id="@+id/ptrsv_record"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:fadingEdge="none"
         android:overScrollMode="never"
         android:scrollbars="none">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


<View
    android:layout_width="match_parent"
    android:layout_height="270dp"/>
    <LinearLayout
        android:id="@+id/ll_no"
android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
android:layout_marginTop="67dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_no"
            android:text="qqqqqqqqqqqqqq"
            android:textSize="18sp"
            android:textColor="#949494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <com.zjwocai.qundui.widgets.ScrollDisabledListView
        android:id="@+id/sdlv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0.3dp"
        android:divider="#333333"
        android:listSelector="@android:color/transparent">

