<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim24"
        android:paddingTop="@dimen/dim24">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:background="@drawable/corners_hollow_818181"
            android:paddingBottom="@dimen/dim20"
            android:paddingLeft="@dimen/dim45"
            android:paddingRight="@dimen/dim45"
            android:paddingTop="@dimen/dim20"
            android:text="取消"
            android:textColor="#818181"
            android:textSize="@dimen/txt43" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim35"
            android:background="@drawable/corners_hollow_22bd22"
            android:paddingBottom="@dimen/dim20"
            android:paddingLeft="@dimen/dim45"
            android:paddingRight="@dimen/dim45"
            android:paddingTop="@dimen/dim20"
            android:text="确定"
            android:textColor="@color/t12b7f5"
            android:textSize="@dimen/txt43" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/ll_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zjwocai.qundui.widgets.placeview.lib.WheelView
            android:id="@+id/wv_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:colorBlack="#ff585858"
            app:colorGray="#ff868686"
            app:colorLightGray="#ffc5c5c5"
            app:itemsVisible="9"
            app:lineSpacingMultiplier="1.8"
            app:velocityfling="5" />

        <com.zjwocai.qundui.widgets.placeview.lib.WheelView
            android:id="@+id/wv_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:colorBlack="#ff585858"
            app:colorGray="#ff868686"
            app:colorLightGray="#ffc5c5c5"
            app:itemsVisible="9"
            app:lineSpacingMultiplier="1.8"
            app:velocityfling="5" />

        <com.zjwocai.qundui.widgets.placeview.lib.WheelView
            android:id="@+id/wv_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:colorBlack="#ff585858"
            app:colorGray="#ff868686"
            app:colorLightGray="#ffc5c5c5"
            app:itemsVisible="9"
            app:lineSpacingMultiplier="1.8"
            app:velocityfling="5" />
    </LinearLayout>
</LinearLayout>