<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popupwindows_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim265"
        android:layout_marginLeft="@dimen/dim35"
        android:layout_marginRight="@dimen/dim35"
        android:background="@drawable/shape_info_reward_pop"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入昵称"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim120"
            android:textColor="@color/t656565"
            android:textSize="@dimen/txt52"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim86">

            <EditText
                android:id="@+id/et_popupwindows_reward_count"
                android:layout_width="@dimen/dim800"
                android:layout_height="@dimen/dim137"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_reward_edit_text"
                android:includeFontPadding="false"
                android:textSize="@dimen/txt58"
                android:textColor="@color/t505050"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:layout_marginTop="@dimen/dim124"
            android:background="@color/tdddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_popupwindows_reward_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim134"
                android:layout_weight="1"
                android:background="@drawable/sl_btn_popupwindows"
                android:textColor="#646464"
                android:textSize="@dimen/txt49"
                android:text="取消" />

            <View
                android:layout_width="@dimen/dim1"
                android:layout_height="match_parent"
                android:background="@color/tdddddd"/>

            <Button
                android:id="@+id/btn_popupwindows_reward_enter"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim134"
                android:layout_weight="1"
                android:background="@drawable/sl_btn_popupwindows"
                android:textSize="@dimen/txt49"
                android:textColor="#12b7f5"
                android:text="确定" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>