<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim210"
        android:background="@color/t12b7f5"
       >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="35dp"
          android:text="运单"

          android:textColor="#ffffff"
          android:textSize="@dimen/txt52"
          />
        <ImageView
            android:id="@+id/im_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_white"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim120"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:textColor="@drawable/act_state_color"
                android:background="@drawable/sl_act_type"
                android:textSize="@dimen/txt46"
                android:text="提货"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <!--<ImageView-->
                <!--android:layout_width="@dimen/dim230"-->
                <!--android:layout_height="@dimen/dim5"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/sl_train_type_icon" />-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:textColor="@drawable/act_state_color"
                android:background="@drawable/sl_act_type"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="在途"
                android:textSize="@dimen/txt46" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:textColor="@drawable/act_state_color"
                android:background="@drawable/sl_act_type"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="送达"
                android:textSize="@dimen/txt46" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_not"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:textColor="@drawable/act_state_color"
                android:background="@drawable/sl_act_type"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="全部"
                android:textSize="@dimen/txt46" />



        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/tcccccd" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_goods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>




</LinearLayout>