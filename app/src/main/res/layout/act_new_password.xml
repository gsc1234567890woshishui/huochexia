<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim110"></LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim134"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:text="输"
            android:textColor="@color/white"
            android:textSize="@dimen/txt43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/txt43" />

        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dim110"
            android:layout_marginRight="@dimen/dim35"
            android:background="@android:color/transparent"
            android:hint="请输入新密码"
            android:inputType="number"
            android:textColor="#3d3d3d"
            android:textColorHint="#a7a7a7"
            android:textSize="@dimen/txt43" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim134"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:text="确认密码"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/txt43" />

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dim110"
            android:layout_marginRight="@dimen/dim35"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请再次输入新密码"
            android:inputType="number"
            android:textColor="#3d3d3d"
            android:textColorHint="#a7a7a7"
            android:textSize="@dimen/txt43" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim127"
        android:layout_marginLeft="@dimen/dim35"
        android:layout_marginRight="@dimen/dim35"
        android:layout_marginTop="@dimen/dim142"
        android:background="@drawable/shape_round_login_btn"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt49" />
</LinearLayout>
