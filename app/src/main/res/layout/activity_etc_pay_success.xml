<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_etc_pay_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    >
    <include layout="@layout/comm_title"/>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/bg_success"
    android:scaleType="fitXY"
    />
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/ll_etcask"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_etcask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETC充值流程"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="#12b6f6"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" >>"
            android:textSize="16sp"
            android:textColor="#12b6f6"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        >
        <TextView
            android:id="@+id/tv_pay"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_coast"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
