<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/comm_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim98">

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/txt44"
                android:textColor="#e84848"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/txt77"
                android:textColor="#e84848" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交订单完成，请尽快完成付款"
            android:layout_marginTop="@dimen/dim51"
            android:textSize="@dimen/txt40"
            android:textColor="#999999"
            android:layout_marginBottom="@dimen/dim87"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="#e8e8e8"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim42" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="#e8e8e8"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dim20"
        android:paddingLeft="@dimen/dim35"
        android:paddingTop="@dimen/dim25"
        android:text="选择支付方式"
        android:textColor="#505050"
        android:textSize="@dimen/txt40" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dim35"
        android:paddingRight="@dimen/dim35">

        <ImageView
            android:layout_width="@dimen/dim90"
            android:layout_height="@dimen/dim90"
            android:layout_marginBottom="@dimen/dim30"
            android:layout_marginTop="@dimen/dim30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_balance" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户支付"
                android:textColor="#383838"
                android:textSize="@dimen/txt43" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐使用我的账户"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/txt31" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim57">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前账户余额 "
                android:textSize="@dimen/txt35"
                android:textColor="#5c5c5c"/>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt35"
                android:textColor="#eb6060"
                android:text="9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元"
                android:textSize="@dimen/txt35"
                android:textColor="#5c5c5c"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dim47"
            android:layout_height="@dimen/dim47"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sl_pay_tick" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dim35"
        android:paddingRight="@dimen/dim35">

        <ImageView
            android:layout_width="@dimen/dim90"
            android:layout_height="@dimen/dim90"
            android:layout_marginBottom="@dimen/dim30"
            android:layout_marginTop="@dimen/dim30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_pay_wechat" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#383838"
                android:textSize="@dimen/txt43" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐安装微信客户端的用户使用"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/txt31" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dim47"
            android:layout_height="@dimen/dim47"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sl_pay_tick" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dim35"
        android:paddingRight="@dimen/dim35">

        <ImageView
            android:layout_width="@dimen/dim95"
            android:layout_height="@dimen/dim90"
            android:layout_marginBottom="@dimen/dim30"
            android:layout_marginTop="@dimen/dim30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_pay_alipay" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="#383838"
                android:textSize="@dimen/txt43" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐安装支付宝客户端的用户使用"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/txt31" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dim47"
            android:layout_height="@dimen/dim47"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sl_pay_tick" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim127"
        android:layout_marginLeft="@dimen/dim35"
        android:layout_marginRight="@dimen/dim35"
        android:layout_marginTop="@dimen/dim326"
        android:background="@drawable/shape_round_login_btn"
        android:gravity="center"
        android:text="付款"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt49" />

</LinearLayout>