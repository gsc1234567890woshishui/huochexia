<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dim33"
    android:paddingRight="@dimen/dim36"
    android:paddingTop="@dimen/dim43">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home_list_item"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim41"
            android:layout_marginRight="@dimen/dim33"
            android:layout_marginTop="@dimen/dim31">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dim59"
                android:layout_height="@dimen/dim58"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_car" />

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim25"
                android:layout_toRightOf="@id/iv_icon"
                android:textColor="@color/t12b7f5"
                android:textSize="@dimen/txt46" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim176"
            android:layout_marginTop="@dimen/dim8"
            android:paddingLeft="@dimen/dim44">

            <ImageView
                android:layout_width="@dimen/dim211"
                android:layout_height="@dimen/dim175"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bg_car" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="车牌："
                            android:textColor="#3d3d3d"
                            android:textSize="@dimen/txt38" />

                        <TextView
                            android:id="@+id/tv_car_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="#656565"
                            android:textSize="@dimen/txt38" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="车险："
                            android:textColor="#3d3d3d"
                            android:textSize="@dimen/txt38" />

                        <TextView
                            android:id="@+id/tv_car_insurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="#656565"
                            android:textSize="@dimen/txt38" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dim32"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="车型："
                            android:textColor="#3d3d3d"
                            android:textSize="@dimen/txt38" />

                        <TextView
                            android:id="@+id/tv_car_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="#656565"
                            android:textSize="@dimen/txt38" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="载重："
                            android:textColor="#3d3d3d"
                            android:textSize="@dimen/txt38" />

                        <TextView
                            android:id="@+id/tv_car_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="#656565"
                            android:textSize="@dimen/txt38" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim27"
            android:layout_marginLeft="@dimen/dim44"
            android:layout_marginTop="@dimen/dim27"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆状态："
                android:textColor="#505050"
                android:textSize="@dimen/txt38" />

            <TextView
                android:id="@+id/tv_car_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim32"
                android:textColor="@color/t12b7f5"
                android:textSize="@dimen/txt38"
                android:layout_toRightOf="@id/tvtv_state"
                />


            <TextView

                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/corners_hollow_22bd22"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/dim15"
                android:paddingLeft="@dimen/dim35"
                android:paddingRight="@dimen/dim35"
                android:paddingTop="@dimen/dim15"
                android:text="删除"
                android:layout_marginRight="10dp"
                android:textColor="@color/t12b7f5"
                android:textSize="@dimen/txt40"

                />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>