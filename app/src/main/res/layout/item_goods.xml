<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"

    android:paddingTop="@dimen/dim15"


    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_gray"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dim29"
        android:layout_marginRight="@dimen/dim29"
        android:layout_marginTop="@dimen/dim13"
        android:elevation="@dimen/dim13"

        android:layout_marginBottom="@dimen/dim19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/title_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim96"
            android:layout_marginRight="@dimen/dim1"
            android:layout_alignParentTop="true"
            android:background="@drawable/home_item_background"
            >

            <ImageView
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_date"
                android:id="@+id/iv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货日期"
                android:textColor="#5D5D5D"
                android:textSize="13sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toRightOf="@id/iv_data"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />


            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--&gt;-->

            <!--<TextView-->
            <!--android:id="@+id/textView3"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="运单号:"-->
            <!--android:textColor="#646464"-->
            <!--android:textSize="@dimen/txt37" />-->

            <!--<TextView-->
            <!--android:id="@+id/tv_number"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dim15"-->

            <!--android:textColor="#646464"-->
            <!--android:textSize="@dimen/txt37" />-->


            <!--</LinearLayout>-->

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="50dp"
                android:layout_height="17dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="#e8e8e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <LinearLayout
                android:layout_toLeftOf="@id/rl_navigation"
                android:layout_marginTop="14dp"
                android:id="@+id/ll_first"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal"

                >

                <LinearLayout

                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发城"
                            android:textColor="#333333"
                            android:textSize="@dimen/txt48"

                            />

                        <TextView
                            android:layout_marginLeft="@dimen/dim13"
                            android:id="@+id/tv_start2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发区"
                            android:textColor="#333333"
                            android:textSize="@dimen/txt48"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="刘能"
                        android:textColor="#9B9B9B"
                        android:textSize="@dimen/txt45"
                        android:ellipsize="end"
                        android:singleLine="true"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_marginTop="5dp"
                        android:textColor="#9B9B9B"
                        android:textSize="@dimen/txt39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="总里程"
                        />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_arrow" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView

                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收城"
                            android:textColor="#333333"
                            android:textSize="@dimen/txt48"
                            />
                        <TextView
                            android:id="@+id/tv_end2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收区"
                            android:layout_marginLeft="@dimen/dim13"
                            android:textColor="#333333"
                            android:textSize="@dimen/txt48"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="16dp"
                        android:id="@+id/tv_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt45"
                        android:textColor="#9B9B9B"
                        android:text="赵四"
                        android:ellipsize="end"
                        android:singleLine="true"
                        />
                </LinearLayout>



            </LinearLayout>
            <ImageView
                android:id="@+id/rl_navigation"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dim48"
                android:src="@drawable/icon_navigation"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:layout_marginTop="1dp"
            android:background="#e8e8e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim78"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/dim19"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_goods"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="苞米"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100t"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20m"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#646464"
                android:textSize="@dimen/dim37"/>
            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1000"
                android:textSize="@dimen/dim37"
                android:textColor="#646464"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dim48"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"

            >
            <LinearLayout
                android:id="@+id/ll_btns"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dim24"

                >

                <Button
                    android:id="@+id/tv_refuse"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim105"
                    android:background="@drawable/home_btn_gre_background"
                    android:text="拒单"
                    android:textColor="@color/t12b7f5"
                    android:textSize="@dimen/txt40"/>

                <Button
                    android:id="@+id/tv_accept"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim105"
                    android:layout_marginLeft="@dimen/dim24"
                    android:background="@drawable/home_btn_background"
                    android:text="起运"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt40"/>
                />


            </LinearLayout>
            <Button
                android:id="@+id/tv_confirm_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim105"
                android:textColor="@color/white"
                android:background="@drawable/shape_home_list_btn"
                android:text="确认送达"
                android:visibility="gone"
                android:textSize="@dimen/txt40"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>
