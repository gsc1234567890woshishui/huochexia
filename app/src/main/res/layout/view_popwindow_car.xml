<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popupwindows_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim134"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_info_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim134"
                android:background="@drawable/sl_btn_popupwindows"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/txt46" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:background="@color/tdddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim134"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_info_reply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim134"
                android:background="@drawable/sl_btn_popupwindows"
                android:textColor="#ea5e5e"
                android:textSize="@dimen/txt46"
                android:text="删除" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:background="@color/tdddddd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim38"
            android:background="#e6e6e6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim2"
            android:background="@color/tdddddd" />

        <Button
            android:id="@+id/item_popupwindows_info_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim134"
            android:background="@drawable/sl_btn_popupwindows"
            android:textColor="#3c3c3c"
            android:textSize="@dimen/txt46"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>