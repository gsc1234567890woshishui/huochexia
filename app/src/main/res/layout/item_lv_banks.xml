<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_ccb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dim35"
        android:paddingRight="@dimen/dim35">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dim90"
            android:layout_height="@dimen/dim90"
            android:layout_marginBottom="@dimen/dim30"
            android:layout_marginTop="@dimen/dim30"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ccb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim35"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现到建设银行"
                android:textColor="#383838"
                android:textSize="@dimen/txt43" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="***  ****  ****  "
                    android:textColor="#8b8b8b"
                    android:textSize="@dimen/txt37"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8888"
                    android:textColor="#8b8b8b"
                    android:textSize="@dimen/txt37"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dim47"
            android:layout_height="@dimen/dim47"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sl_pay_tick" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

</LinearLayout>